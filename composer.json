{
	"name": "david63/biblequotes",
	"type": "phpbb-extension",
	"description": "Adds a bible quotes feature to phpBB using Bible Gateway.",
	"version": "3.1.0-RC1",
	"time": "2019-09-08",
	"keywords": [
		"phpbb",
		"extension",
		"bible",
		"quote"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "David Wood",
			"role": "Extension Developer"
		}
    ],
	"require": {
        "php": ">=7.1.3",
        "composer/installers": "~1.0"
    },
	"extra": {
		"display-name": "[d63] Bible quotes",
		"soft-require": {
			"phpbb/phpbb": ">=3.3.0,<4.0.0@dev"
		},
		"version-check": {
        	"host": "version.phpbbdev.space",
        	"directory": "/versions",
        	"filename": "biblequotes_version_file.json",
			"ssl": false
    	}
	}
